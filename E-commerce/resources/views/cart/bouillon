$(function () {
         
         //FIRTRE PAR PRIX
         $var $range =$(".js-range-slider");
         instance = $range.data("ionRangeSlider");
         instance.update({
             from:{{$from}},
             to:{{$to}}
         });
             $("#prange").on("change",function () {
                 setTimeout(() => {
                     $("#formfilter").submit();
                 },1000);
             });
         });


